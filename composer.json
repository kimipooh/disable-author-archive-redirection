{
        "name": "kimipooh/disable-author-archive-redirection",
        "description": "WordPress redirects /?author=(number) to /author/(userID) if the author id exists. This is the security vulnerability because an internet user might be able to know all User ID and the user name in a website using WordPress.",
        "minimum-stability": "stable",
        "type": "wordpress-plugin",
        "license": "GPL-2.0-or-later",
        "authors": [
                {
                        "name": "Kimiya Kitani",
                        "email": "kitani@kitaney.jp"
                }
        ],
        "require": {
                "php": ">=5.6"
        },
       "require-dev": {
         "wp-coding-standards/wpcs": "^2.3",
         "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
         "phpcompatibility/phpcompatibility-wp": "^2.1",
         "yoast/phpunit-polyfills": "^1.0.1",
         "phpunit/phpunit": "^5.7.21 || ^6.5 || ^7.5"
    }
}
